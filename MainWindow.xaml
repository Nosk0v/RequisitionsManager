<Window x:Class="RequisitionsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RequisitionsManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300" ResizeMode="NoResize" Background="#76E383">
    <Grid Margin="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="167*"/>
        </Grid.RowDefinitions>


        <StackPanel Margin="16,16,16,16" Grid.RowSpan="3">
            <Label Content="Логин" Foreground="#484848"></Label>
            <TextBox Name="tbLogin"></TextBox>
            <Label Content="Пароль" Foreground="#484848"></Label>
            <PasswordBox Name="tbPassword"></PasswordBox>
            <Button Margin =" 0 10"  Content="Войти в аккаунт" Foreground="White" Background="#498C51" FontWeight="Bold" Click="Button_Click"/>
            <Button Margin =" 0 10"  Content="Войти как клиент" Foreground="White" Background="#498C51" FontWeight="Bold" Click="Button_Click_1"/>
        </StackPanel>
        


    </Grid>
</Window>
